<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@drawable/fuck_up_mc"
    android:id="@+id/chinessMain"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <!---->
    <ProgressBar

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="60dp"
        android:indeterminate="false"
        android:max="100"
        android:progressDrawable="@drawable/chiness_progress"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/linearLayoutchiness"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="240dp"
        android:background="@drawable/quiz_question"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:background="@android:color/white"
                android:id="@+id/mothrAge"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:hint="Enter mom age"
                android:textColor="#8c8181"
                android:textColorHint="#8b7e7e" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="18-45" />

        </LinearLayout>

        <AutoCompleteTextView
            android:id="@+id/dateChick"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_marginTop="30dp"
            android:background="@android:color/white"
            android:hint="Enter conception months"
            android:textAlignment="gravity"
            android:inputType="textAutoComplete"
            android:textColor="#8c8181"
            android:layout_marginLeft="24dp"
            android:textColorHint="#8b7e7e" />


        <Button
            android:id="@+id/calculate"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:gravity="center"
            android:text="Calculate"
            android:background="@drawable/chiness_background"
            android:textColor="@android:color/white" />

    </LinearLayout>
</LinearLayout>
